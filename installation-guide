# Arch Installation Guide by glins

# setting up keyboard layout
1. loadkeys br-abnt2

# check internet connection
1.5 ping 8.8.8.8

# check disk distribution
2. lsblk

# partition drives
3. cfdisk /dev/sdb

# format drive
4. mkfs.ext4 /dev/sdb2

# mount drive
5. mount /dev/sdb2 /mnt
   mkswap /dev/sdb1
   swapon /dev/sdb1
   swapon -s #should receive status message

# install base system
6. pacstrap /mnt base base-devel

# configure installation
7. arch-chroot /mnt

# new root password
8. passwd

# location stuf
9. nano /etc/locale.gen
   # uncomment pt_BR lines
   9.1 locale-gen
   9.2 ln -s /usr/share/zoneinfo/Brazil/East /etc/localtime

# set hostname
10. echo desired_hostname > /etc/hostname

# download and install bootloader
11. pacman -S grub-bios
	1.1 grub-install /dev/sdb

# create init file - hardware specific
12. mkinitcpio -p linux

# create grub configuration file
13. grub-mkconfig -o /boot/grub/grub.cfg

JADISCKEGAY
pacman -S iw iwconfig wpa_supplicant wifi-menu

# exit chroot
14. exit
   # generate fstab file
   14.1 genfstab /mnt >> /mnt/etc/fstab

# unmount drive
15. umount /mnt


# reboot system
16. reboot

=========
========= INSTALLATION FINISHED
=========

# login to root
17. input root and root password


# setup ethernet
18. ip link
   # get ethernet drive name
   18.1 systemctl enable dhcpcd@ethernet_drive_name (in my case, enp2s0)
   18.2 systemctl start dhcpcd@ethernet_drive_name (in my case, enp2s0)


# update and reboot 
19. pacman -Syu
   19.1 reboot

# install stuff
20. pacman -S lightdm xorg xorg-server deepin deepin-terminal

# create new user, add permissions
21. useradd -m -G wheel,users -s /bin/bash desired_username
	# set its password
	21.1 passwd desired_username
	#uncomment #wheel ALL=(ALL) ALL
	21.2 EDITOR=nano visudo

# edit display manager
22. nano /etc/lightdm/lightdm.conf
	# change greeter-session 
	[SeatDefaults]
	...
	greeter-session=lightdm-deepin-greeter

# enable lightdm on startup; reboot
23. systemctl enable lightdm.service
	23.1 reboot

=========
========= DESKTOP READY
=========

# update repositories
24. sudo nano /etc/pacman.conf
	# uncomment
		[multilib]
		Include = /etc/pacman.d/mirrorlist
	# add the following 3 lines:
		[archlinuxfr]
		SigLevel = Never
		Server = http://repo.archlinux.fr/$arch
	24.1 pacman -Syu

# install programs
25. sudo pacman -S yaourt git speedcrunch evince netowkmanager network-manager-applet leafpad sublime-text steam steam-native-runtime chromium qucs libreoffice teamspeak3 

# install programs from AUR
26. yaourt -S sl spotify stremio-bin breeze-snow-cursor-theme skypeforlinux-bin arduino archey3

   
   

